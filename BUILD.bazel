    name = "bootstrap_files",
    # do not sort
    srcs = [
        "//:node_modules/zone.js/dist/zone.min.js",
        "//:node_modules/systemjs/dist/system.src.js",
        "//:site.css",
        "//:node_modules/bootstrap/dist/css/bootstrap.min.css"
